<Window x:Class="IB1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IB1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="379.909" MinHeight="250" MinWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold" FontSize="25">Вход</TextBlock>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Margin="0 15 0 0">Логин</TextBlock>
        <TextBox Grid.Row="2" HorizontalAlignment="Center" Width="200" Height="16"></TextBox>
        <TextBlock HorizontalAlignment="Center" Grid.Row="3" Margin="0 15 0 0">Пароль</TextBlock>
        <PasswordBox Grid.Row="4" HorizontalAlignment="Center" Width="200" Height="16"></PasswordBox>
        <Button Grid.Row="5" Width="100" Height="20">Войти</Button>
    </Grid>
</Window>
